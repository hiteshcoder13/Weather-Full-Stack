<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ThapaWeather</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        header {
            background-color: #1a1a1a;
            color: white;
            padding: 10px 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        header h1 {
            margin: 0;
        }

        nav a {
            color: white;
            margin-left: 20px;
            text-decoration: none;
        }

        .container {
            text-align: center;
            padding: 50px;
            display: flex;
        }

        .container h2 {
            margin-bottom: 20px;
        }

        .container p {
            font-size: 24px;
            margin-bottom: 20px;
        }

        .btn {
            background-color: #f0f0f0;
            border: none;
            padding: 10px 20px;
            cursor: pointer;
            font-size: 16px;
        }

        .slider {
    width: 450px; /* Adjust as needed */
    height: 300px; /* Adjust as needed */
    overflow: hidden;
    border: 2px solid #ccc;
    position: relative;
    border: none;
 margin-left: 100px;
    /* margin-top: 30px;  */
}

.slide-track {
    display: flex;
    animation: scroll infinite; /* Adjust the duration as needed */
    border: none;
}

.slide {
    min-width: 100%;
    transition: transform 0.5s;
    border: none;
}

.slide img {
    width: 100%;
    height: 100%;
    display: block;
  
}

@keyframes scroll {
    0% { transform: translateX(0); }
    25% { transform: translateX(-100%); }
    50% { transform: translateX(-200%); }
    75% { transform: translateX(-300%); }
    100% { transform: translateX(-400%); }
}
.text{
    margin-top: 100px;
    margin-right: 300px;
    /* margin-right: 600px; */
}
    </style>
</head>
<body>
   {{>header}}
    <div class="container">
        <div class="text">
        <h2>Welcome to weather app</h2>
        <p>Get The Latest <span style="color: blue;">Weather</span> Info Of Your City</p>
        <button class="btn">CHECK NOW</button>
        </div>
        <div class="slider">
            <div class="slide-track">
                <div class="slide"><img src="https://static.vecteezy.com/system/resources/previews/007/488/951/original/light-snow-color-icon-winter-snowy-weather-cloud-and-snowflake-weather-forecast-isolated-illustration-vector.jpg" alt="Image 1"></div>
                <!-- <div class="slide"><img src="https://th.bing.com/th/id/OIP.ClLB6Si3HFODhmHv22GBBwHaHb?rs=1&pid=ImgDetMain" alt="Image 2"></div> -->
                <div class="slide"><img src="https://th.bing.com/th/id/OIP.H4tsWZ1dtTyzMLiTC6SPtAHaHG?rs=1&pid=ImgDetMain" alt="Image 3"></div>
                <!-- Add more images as needed -->
            </div>
        </div>
    </div>
    <script>
        const track = document.querySelector('.slide-track');
const slides = document.querySelectorAll('.slide');
const totalSlides = slides.length;

let counter = 0;

setInterval(() => {
    counter++;
    if (counter === totalSlides) {
        track.style.transform = `translateX(0)`;
        counter = 0;
    } else {
        track.style.transform = `translateX(-${counter * 100}%)`;
    }
}, 2000);

    </script>
</body>
</html>
